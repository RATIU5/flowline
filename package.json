{
  "name": "flowline-root",
  "private": true,
  "license": "MIT",
  "type": "module",
  "packageManager": "bun@1.3.5",
  "workspaces": {
    "packages": [
      "packages/**/*",
      "apps/**/*"
    ],
    "catalog": {
      "typescript": "^5.9.3"
    },
    "catalogs": {
      "testing": {
        "vitest": "^4.0.16"
      },
      "effect": {
        "effect": "^3.19.12",
        "@effect/platform": "0.93.8",
        "@effect/platform-bun": "0.86.0",
        "@effect/platform-browser": "0.73.0",
        "@effect/platform-node": "0.103.0",
        "@effect/rpc": "0.72.2",
        "@effect/experimental": "^0.58.0",
        "@effect/language-service": "^0.64.1",
        "@effect/sql": "0.49.0",
        "@effect/sql-pg": "0.49.7",
        "@effect/cluster": "^0.55.0",
        "@effect/opentelemetry": "0.60.0",
        "@effect/workflow": "0.16.0",
        "@effect-atom/atom": "0.4.11",
        "@effect/ai": "^0.33.2",
        "@effect/ai-openrouter": "^0.8.0",
        "@effect/vitest": "^0.27.0"
      }
    }
  },
  "scripts": {
    "prepare": "effect-language-service patch",
    "dev:fe": "bun run --filter frontend dev",
    "dev:be": "bun run --filter backend dev",
    "format:check": "biome format --verbose",
    "format:write": "biome format --write",
    "lint:check": "biome lint",
    "lint:write": "biome lint --write",
    "typecheck": "tsgo --noEmit --project tsconfig.base.json",
    "test": "bun run --workspaces test",
    "clean:all": "bun run clean:dist && bun run clean:packages",
    "clean:dist": "rimraf packages/**/dist",
    "clean:packages": "rimraf node_modules apps/**/node_modules packages/**/node_modules bun.lock && echo 'Re-install required'"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@effect/language-service": "catalog:effect",
    "@types/bun": "latest",
    "rimraf": "^6.1.2",
    "typescript": "catalog:"
  }
}
